#LAMBDA EXPRESSION PRACTICE
############################## EVEN NO #################################

#normal way
def even(a):
    if a%2==0:
        return True
    else:
        return False
print(even(43))      #o/p:False


#simplify of normal way
def even(a):
    return a%2==0
print(even(4))  #o/p:True


#lambda exp:
even= lambda a: a%2==0
print(even(4235))   #o/p:False


############################# LAST CHARACTER  ####################

#NORMAL


def last_char(s):
    return s[-1]
print(last_char("moni"))         #o/p: i


#lambda
last_chr= lambda s:  s[-1]
print(last_chr("moni"))     #o/p: i
